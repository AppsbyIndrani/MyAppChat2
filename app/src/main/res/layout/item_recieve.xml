<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/recieve_msg"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/receiverimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/receiverpdf"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars" />

        <VideoView
            android:id="@+id/receiversvideos"
            android:layout_width="230dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/recievermessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/recieve_msg"
            android:fontFamily="@font/allerta_stencil"
            android:maxWidth="300dp"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>


    </LinearLayout>


    <ImageView
        android:id="@+id/recieverfeeling"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/linearlayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearlayout2"
        app:layout_constraintStart_toEndOf="@id/linearlayout2"
        app:layout_constraintTop_toTopOf="@id/linearlayout2"
        app:srcCompat="@android:drawable/ic_lock_lock" />

    <ImageView
        android:id="@+id/receiverfeelingset"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linearlayout2"
        app:layout_constraintStart_toStartOf="@id/linearlayout2"
        app:layout_constraintTop_toTopOf="@id/linearlayout2"
        android:src="@drawable/dislike"
        />

    <TextView
        android:id="@+id/receivertimetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="3:00 pm"
        android:textSize="9sp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="@id/linearlayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>